    <% if @notes %>
      <div class="row header">
        <div class="col header" style="width:20%">DATE</div>
        <div class="col header" style="width:60%">NOTE</div>
        <div class="col header" style="width:10%">ACTION</div>
      </div>
      <% if 0 < @notes.size %>
        <% @notes.each_with_index do |note, i| %>
        <div class="row">
          <div class="col" style="width:20%"><%= note.create_date.strftime('%m/%d/%Y') %></div>
          <div class="col" style="width:60%"><%= note.content %></div>
          <div class="col" style="width:10%">
            <%= link_to "Show", note %>
          </div>
        </div>
        <% end %>
      <% else %>
        <div class="row center" style="padding:100px 0px;">No records found</div>
      <% end %>
    <% end %>      
