<%= form_for @order, :html => { :multipart => true}, :remote => @order.new_record? do |order| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if @address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@address.errors.count, "error") %> prohibited this adderss from being saved:</h2>

      <ul>
      <% @address.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Order Detail -->
  <div id="order_detail" class="row">
    <%= render 'orders/order_form' %>
  </div>

  <!-- Customer Detail -->
  <div id="customer_detail" class="row">
    <%= render 'customers/order_form' %>
  </div>
  
  <!-- Item -->
  <div id="items">
    <%= render 'items/order_form' %>
  </div>
  
  <!-- Order Payment -->
  <div id="order_ledger" class="row" style="padding-top:40px;">
    <div id="order_charge" class="col payment" style="width:40%">
      <%= render 'orders/price_form' %>
    </div>
    <div id="ledgers" class="col payment" style="width:45%; <%= "display:none;" if @ledgers.nil? %>">
      <%= render 'ledgers/order_form' %>
    </div>
  </div>
  
  <div class="row" style="padding-top:20px;">
    <div class="col_r">
      <%= button_tag "Submit",
        :id => "submit_button",
        :name => "submit_button",
        :type => "submit" 
      %>
    </div>
  </div>
  
  <div class="row"></div>
<% end %>
  