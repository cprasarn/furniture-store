<div class="hero-unit">
  <div class="portlet">
    <div class="left">Customers</div>
    <div class="right link_action">
      <%= link_to "New Customer", new_customer_path %>
    </div>
  </div>
  <div class="row">
    <div class="col bold" style="width:10%">ID</div>
    <div class="col bold" style="width:30%">Name</div>
    <div class="col bold" style="width:30%">Email</div>
    <div class="col bold" style="width:20%">Actions</div>
  </div>
  <% @customers.each do |customer| %>
  <div class="row">
    <div class="col" style="width:10%"><%= customer.id %></div>
    <div class="col" style="width:30%"><%= customer.name %></div>
    <div class="col" style="width:30%"><%= customer.email %></div>
    <div class="col" style="width:20%">
        <%= link_to "Show", customer %>
        <%= link_to "Edit", edit_customer_path(customer) %>
        <%= link_to 'Remove', customer, confirm: 'Are you sure?', method: :delete %>
    </div>
  </div>
  <% end %>
  
  <div class="row">
    <div class="col_r">
      <%= will_paginate @customers %>
    </div>
  </div>
</div>